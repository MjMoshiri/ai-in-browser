{
    "version": "0.0.1",
    "version_name": "0.0.1",
    "manifest_version": 3,
    "name": "My Extension",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "bundle.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "options.html"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}